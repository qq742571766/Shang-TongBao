<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.zhonghong.hlbelogistics.core.login.LoginActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/toolbar_background"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logo"
                android:layout_marginTop="@dimen/y100"
                android:id="@+id/register_imageView"
                />
            <EditText
                android:id="@+id/phone_number_editText"
                android:layout_width="@dimen/x787"
                android:layout_height="@dimen/y134"
                android:hint="@string/username"
                android:textColorHint="@color/edit_hdit"
                android:textColor="@color/edit_hdit"
                android:background="@drawable/regist_edit_background"
                android:layout_marginTop="@dimen/y90"
                android:gravity="center"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/password_editText"
                android:layout_width="@dimen/x787"
                android:layout_height="@dimen/y134"
                android:layout_marginTop="@dimen/y69"
                android:hint="@string/password"
               android:inputType="textPassword"
                android:textColorHint="@color/edit_hdit"
                android:textColor="@color/edit_hdit"
                android:background="@drawable/regist_edit_background"
                android:gravity="center"
                android:textSize="16sp" />
            <Button
                android:id="@+id/login_button"
                android:layout_width="@dimen/x787"
                android:layout_height="@dimen/y134"
                android:background="@drawable/regist_btn"
                android:text="@string/login"
                android:layout_marginTop="@dimen/y50"
                android:textSize="20sp"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forget_pwd"
                android:textColor="@color/blue"
                android:layout_below="@id/login_button"
                android:layout_centerHorizontal="true"
                android:id="@+id/wangji_textView"
                android:layout_marginTop="@dimen/y25"
                />
            <!--<Button-->
                <!--android:id="@+id/register_button"-->
                <!--android:layout_width="@dimen/x280"-->
                <!--android:layout_height="@dimen/y96"-->
                <!--android:background="@drawable/login_regist"-->
                <!--android:text="注册"-->
                <!--android:gravity="center"-->
                <!--android:textColor="@color/blue"-->
                <!--android:layout_marginTop="@dimen/y200"-->
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
