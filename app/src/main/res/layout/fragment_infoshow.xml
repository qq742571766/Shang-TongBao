<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        >
        <com.zhonghong.hlbelogistics.ui.AutoRadioGroup
            android:id="@+id/infoshowo_rgTools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <RadioButton
                android:id="@+id/infoshow_rbBuyers"
                android:checked="true"
                android:drawableTop="@drawable/selector_rb_buyers_icon"
                android:textSize="12sp"
                android:textColor="@drawable/selector_rb_buyers"
                android:text="@string/buyer_info"
                style="@style/rb_style"
               />
            <RadioButton
                android:id="@+id/infoshow_rbSellers"
                android:checked="true"
                android:drawableTop="@drawable/selector_rb_sellers_icon"
                android:text="@string/seller_info"
                android:textColor="@drawable/selector_rb_sellers"
                android:textSize="12sp"
                style="@style/rb_style"/>
            <RadioButton
                android:id="@+id/infoshow_rbGoods"
                android:checked="false"
                android:drawableTop="@drawable/selector_rb_goods_icon"
                android:text="@string/goods_info"
                android:textSize="12sp"
                android:textColor="@drawable/selector_rb_goods"
                style="@style/rb_style"/>
            <RadioButton
                android:id="@+id/infoshow_rbCarSource"
                android:checked="false"
                android:drawableTop="@drawable/selector_rb_carsource_icon"
                android:text="@string/carsouces_info"
                android:textSize="12sp"
                android:textColor="@drawable/selector_rb_carsource"
                style="@style/rb_style"/>
        </com.zhonghong.hlbelogistics.ui.AutoRadioGroup>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/content_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>


</LinearLayout>