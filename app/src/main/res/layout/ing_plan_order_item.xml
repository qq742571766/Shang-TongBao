<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bar"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_lt"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@drawable/bottom_line"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="aaaaaaaa"
            android:textColor="#d66a00"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_lt"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单名称："
                android:textColor="@color/font"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/goods_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号："
                android:textColor="@color/font"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/plan_order_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取货地:"
                android:textColor="@color/font"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/pick_place_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送达地:"
                android:textColor="@color/font"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/arrive_place_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_lt"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/modify_status_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_ing_tv"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:text="修改状态"
            android:textColor="@drawable/selector_ing_tc"
            android:visibility="gone" />

        <TextView
            android:id="@+id/problem_report_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_ing_tv"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:text="问题上报"
            android:textColor="@drawable/selector_ing_tc"
            android:visibility="gone" />

        <TextView
            android:id="@+id/map_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_ing_tv"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:text="轨迹"
            android:textColor="@drawable/selector_ing_tc" />

        <TextView
            android:id="@+id/details_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_ing_tv"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:text="详情"
            android:textColor="@drawable/selector_ing_tc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="@color/white" />
    <com.baidu.mapapi.map.TextureMapView
        android:id="@+id/main_map"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone">
    </com.baidu.mapapi.map.TextureMapView>
</LinearLayout>

